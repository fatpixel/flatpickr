$calendarBackground = #fff
$calendarBorderColor = #a3d7e6
$calendarBorderColor = #bedde6

$monthForeground = #3c3f40
$monthBackground = transparent

$weekdaysBackground = transparent
$weekdays_color = #757575

$dayForeground = #404848
$dayHoverBackground = #e9e9e9
$disabled_border_color = $dayHoverBackground

$disabled_day_color = alpha(black, 0.15)

$todayColor = #2bcc46
$todayColorImage = linear-gradient(to bottom, $todayColor, saturate($todayColor, 3%) 50%, #44994411 50%, #ffffff44 120%)

$today_fg_color = darken($todayColor, 40%)

$selectedDayBackground = #4f99ff
$selectedDayBackgroundImage = linear-gradient(to bottom, $selectedDayBackground, saturate($selectedDayBackground, 5%) 50%, #44449911 50%, #ffffff44 120%)
$selectedDayForeground = #fff


$monthNavHeight = 38px
$weekdaysHeight = 38px
$timeHeight = 40px



@require "../flatpickr_xc.styl"

.flatpickr-calendar
	width $daysWidth

.dayContainer
	padding 0
	border-right 0

span.flatpickr-day
	&, &.prevMonthDay, &.nextMonthDay
		border-radius 0 !important
		border 1px solid $dayHoverBackground
		max-width none
		border-right-color transparent
		
		&:nth-child(n+8)
			border-top-color transparent

		&:nth-child(7n-6)
			border-left 0

		&:nth-child(n+36)
			border-bottom 0
		
		&:nth-child(-n+7)
			margin-top 0

		&.today:not(.selected)
			border-color $dayHoverBackground
			border-right-color transparent
			border-top-color transparent
			border-bottom-color $todayColor

			&:hover
				border 1px solid $todayColor
				border-top-color transparent

		&.startRange, &.endRange
			border-color $selectedDayBackground


		&.today, &.selected
			z-index 2

.rangeMode .flatpickr-day
	margin-top -1px

.flatpickr-weekwrapper .flatpickr-weeks
	box-shadow none

.flatpickr-weekwrapper span.flatpickr-day
	border 0
	margin -1px 0 0 -1px


.hasWeeks .flatpickr-days
	border-right 0

.flatpickr-time.unselected
	display none

.flatpickr-selectTime
	height 40px
	max-height 0
	visibility hidden
	display flex
	justify-content center
	align-items center
	cursor pointer
	background rgba(0,0,0,0.06)

.flatpickr-selectTime svg path
	fill inherit

.flatpickr-selectTime.darkTheme
	color white
	fill white

.flatpickr-selectTime.visible
	max-height 40px
	visibility visible
